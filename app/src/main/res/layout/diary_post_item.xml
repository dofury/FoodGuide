<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">


    <LinearLayout
        android:id="@+id/diary_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_diary_item_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:srcCompat="@drawable/chicken" />
        <RatingBar
            android:id="@+id/diary_item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="true"/>
        <TextView
            android:id="@+id/tv_diary_item_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="안녕하세요"/>

        <TextView
            android:id="@+id/tv_diary_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_horizontal"
            android:text="삭제하기"
            android:textSize="11sp"
            android:textColor="@color/black"
            android:visibility="visible" />
        <TextView
            android:id="@+id/tv_diary_item_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            tools:text="2022-09-11 02:22:23" />



    </LinearLayout>

</androidx.cardview.widget.CardView>