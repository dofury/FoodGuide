<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".diary.DiaryPost"
    android:background="#FFF6DE">


    <TextView
        android:layout_marginTop="15dp"
        android:id="@+id/tv_diary_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="제목"
        android:textColor="#2C2C2C"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="15dp"
        />

    <EditText
        android:id="@+id/et_diary_title"
        android:layout_width="match_parent"
        android:layout_height="34sp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edit_text"
        android:paddingStart="10dp"
        android:paddingEnd="12dp"
        app:layout_constraintStart_toStartOf="@+id/tv_diary_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_diary_title" />

    <TextView
        android:id="@+id/tv_diary_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="내용"
        android:textColor="#2C2C2C"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/tv_diary_title"
        app:layout_constraintTop_toBottomOf="@id/et_diary_title" />


    <EditText
        android:gravity="left"
        android:paddingTop="5dp"
        android:id="@+id/et_diary_content"
        android:layout_width="match_parent"
        android:layout_height="230sp"
        android:layout_margin="10dp"
        android:background="@drawable/custom_edit_text"
        android:paddingStart="10dp"
        app:layout_constraintStart_toStartOf="@+id/tv_diary_title"
        app:layout_constraintTop_toBottomOf="@id/tv_diary_content" />


    <ImageView

        android:id="@+id/iv_diary_image"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_diary_content" />

    <Button

        android:id="@+id/btn_diary_image_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CC8216"
        android:text="이미지 선택"
        android:layout_marginEnd="20dp"
        android:textColor="#FFFFFF"
        app:layout_constraintRight_toLeftOf="@id/btn_diary_save"
        app:layout_constraintTop_toTopOf="@+id/btn_diary_save" />

    <Button
        android:id="@+id/btn_diary_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:backgroundTint="#CC8216"
        android:text="등록"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/et_diary_content"
        app:layout_constraintTop_toBottomOf="@+id/iv_diary_image" />


</androidx.constraintlayout.widget.ConstraintLayout>